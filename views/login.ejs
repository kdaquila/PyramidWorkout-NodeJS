<!doctype html>
<html lang="en">
<head>
    <%- include('./_head_shared_content'); %>
    <title>Login</title>
</head>

<body class="body" id='atomic'>

<!-- Navbar -->
<%- include('./_navbar'); %>

<section class="body__expandingSection">
    <div class="container D(f) Jc(c) Mb(50px)">
        <form class="" action="/login" method="POST">
            <h1 class="sans-bold-2xl sans-bold-5xl-@sm sans-bold-5xl-@sm Mb(0.5em)">Login</h1>
            <label class="form__label" for="usernameTextBox">Username</label>
            <input class="form__textbox" type="text" name="username" id="usernameTextBox">
            <label class="form__label" for="passwordTextBox">Password</label>
            <input class="form__textbox" type="password" name="password" id="passwordTextBox">
            <button class="button-red sans-bold-xs sans-bold-lg-@sm Mb(50px)" type="submit">Login</button>
            <a class="link-gray-1 sans-bold-lg D(b)" href="/signup">Create New Account</a>
        </form>
    </div>
</section>

<%- include('./_footer'); %>

</body>
</html>